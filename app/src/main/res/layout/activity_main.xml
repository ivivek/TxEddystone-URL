<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.linetra.txeddystone_url.MainActivity">

    <Switch
        android:id="@+id/txSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Tx" />

    <TextView
        android:id="@+id/urlPrefixText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txSwitch"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="URL Prefix" />

    <Spinner
        android:id="@+id/urlPrefix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/urlPrefixText"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/urlText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/urlPrefix"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="URL" />


    <EditText
        android:id="@+id/url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/urlText"
        android:layout_centerHorizontal="true"
        android:text="google.com" />

    <TextView
        android:id="@+id/txPowerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Tx power"
        android:layout_below="@id/url" />

    <Spinner
        android:id="@+id/txPower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txPowerText"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/txModeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txPower"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Tx mode" />

    <Spinner
        android:id="@+id/txMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txModeText"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
